<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title - WebReserva</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <!-- FONT -->
    <link href="http://fonts.googleapis.com/css?family=Hind:400,300,500,600%7cMontserrat:400,700" rel="stylesheet" type="text/css">

    <!-- CSS -->
    <link href="~/Content/global/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/global/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/global/css/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/global/css/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/global/css/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/global/css/settings.css" rel="stylesheet" />
    <link href="~/Content/global/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/global/css/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/global/css/style.css" rel="stylesheet" />
    <link href="@ViewBag.Tema" rel="stylesheet" />

    <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <script src="http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js"></script>
    <![endif]-->
</head>

<!--[if IE 7]> <body class="ie7 lt-ie8 lt-ie9 lt-ie10"> <![endif]-->
<!--[if IE 8]> <body class="ie8 lt-ie9 lt-ie10"> <![endif]-->
<!--[if IE 9]> <body class="ie9 lt-ie10"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<body ng-app="webReservaApp">
    <!--<![endif]-->

    <div id="preloader">
        <span class="preloader-dot"></span>
    </div>

    <div id="page-wrap">
        <header id="header">
            <div class="header_content" id="header_content">
                <div class="container">
                    <div class="header_logo">
                        <a href="/@ViewBag.TenantUrl"><img src="@ViewBag.ImgLogo" /></a>
                    </div>
                    @if (!@ViewBag.Erro)
                    {
                        <nav class="header_menu">
                            <ul class="menu">
                                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                @*
                                <li>@Html.ActionLink("Sobre", "Index", "Sobre")</li>
                                <li>@Html.ActionLink("Acomodações", "Index", "Acomodacoes")</li>
                                <li>@Html.ActionLink("Pacotes", "Index", "Pacotes")</li>
                                *@
                                <li>@Html.ActionLink("Contato", "Index", "Contato")</li>
                            </ul>
                        </nav>
                        <span class="menu-bars">
                            <span></span>
                        </span>
                    }
                </div>
            </div>
        </header>

        @RenderBody()

        <footer id="footer">
            @if (!@ViewBag.Erro)
            {
                <div class="footer_top">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-9">
                                <div class="mailchimp" ng-controller="wrMailingController">
                                    <h4>Notícias &amp; Ofertas</h4>
                                    <div class="mailchimp-form">
                                        <form novalidate name="noForm" ng-submit="addMail()">
                                            <input type="email"
                                                   name="noEmail"
                                                   id="noEmail"
                                                   ng-model="mailing.email"
                                                   required
                                                   placeholder="Seu endereço de email"
                                                   class="input-text">
                                            <button class="awe-btn" id="noBtnAssinar">Assinar</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-lg-offset-1">
                                <div class="social">
                                    <div class="social-content">
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Facebook))
                                        {
                                            <a href="@ViewBag.Facebook" target="_blank"><i class="fa fa-facebook"></i></a>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Twitter))
                                        {
                                            <a href="@ViewBag.Twitter" target="_blank"><i class="fa fa-twitter"></i></a>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Instagram))
                                        {
                                            <a href="@ViewBag.Instagram" target="_blank"><i class="fa fa-instagram"></i></a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="footer_center">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="widget widget_logo">
                                <div class="widget-logo">
                                    <div class="img">
                                        <a href="/@ViewBag.TenantUrl"><img src="@ViewBag.ImgLogo" alt=""></a>
                                    </div>
                                    <div class="text">
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.Telefone))
                                        {
                                            <p><i class="fa fa-phone"></i> @ViewBag.Telefone</p>
                                        }
                                        @if (!string.IsNullOrWhiteSpace(ViewBag.EmailAdministrador))
                                        {
                                        <p><i class="fa fa-envelope-o"></i> <a href="mailto:@ViewBag.EmailAdministrador">@ViewBag.EmailAdministrador</a></p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="footer_bottom">
                <div class="container">
                    <p>&copy; @DateTime.Now.Year WebReserva - Todos os direitos reservados</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Content/global/js/jquery-1.11.0.min.js"></script>
    <script src="~/Content/global/js/jquery-ui.min.js"></script>
    <script src="~/Content/global/js/bootstrap.min.js"></script>
    <script src="~/Content/global/js/bootstrap-select.js"></script>
    <script src="~/Content/global/js/isotope.pkgd.min.js"></script>
    <script src="~/Content/global/js/jquery.themepunch.revolution.min.js"></script>
    <script src="~/Content/global/js/jquery.themepunch.tools.min.js"></script>
    <script src="~/Content/global/js/owl.carousel.js"></script>
    <script src="~/Content/global/js/jquery.appear.min.js"></script>
    <script src="~/Content/global/js/jquery.countTo.js"></script>
    <script src="~/Content/global/js/jquery.countdown.min.js"></script>
    <script src="~/Content/global/js/jquery.parallax-1.1.3.js"></script>
    <script src="~/Content/global/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/global/js/jquery.mask.min.js"></script>
    <script src="~/Content/global/js/SmoothScroll.js"></script>
    <script src="~/Content/global/js/toastr.min.js"></script>
    <script src="~/Content/global/js/jquery.form.min.js"></script>
    <script src="~/Content/global/js/jquery.validate.min.js"></script>
    <script src="~/Content/global/js/scripts.js"></script>
    <script src="~/Content/global/js/angular.min.js"></script>
    <script src="~/Content/global/angular/webReservaApp.js"></script>
    <script src="~/Content/global/angular/wrMailingController.js"></script>
    <script type="text/javascript">
        (function () {
            'use strict';

            var tenantData = {
                id: '@ViewBag.TenantId',
                name: '@ViewBag.TenantName',
                url: '@ViewBag.TenantUrl'
            };

            angular.module('webReservaApp').constant('tenantData', tenantData);
        })();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>