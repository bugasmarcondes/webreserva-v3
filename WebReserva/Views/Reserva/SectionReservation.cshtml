@model WebReserva.ViewModels.PostDetalhesViewMovel

<section class="section-reservation-page bg-white" ng-controller="wrSectionReservationController">
    <form novalidate name="srFormSearch" ng-submit="saveReservationSearch()" id="srFormSearch">
        <div class="container">
            <div class="reservation-page">
                <div class="row">
                    <div class="col-md-8 col-lg-9">
                        <div class="reservation_content">
                            <div class="reservation-billing-detail">
                                <h4>INFORMAÇÕES DO HÓSPEDE</h4>
                                <p>Por favor, se identifique.</p>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Nome<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srNome" ng-model="srFormSearch.nome" required>
                                        <span class="text-danger" ng-show="srFormSearch.srNome.$dirty && srFormSearch.srNome.$error.required">Obrigatório</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Email<sup>*</sup></label>
                                        <input type="email" class="input-text" name="srEmail" ng-model="srFormSearch.email" required>
                                        <span class="text-danger" ng-show="srFormSearch.srEmail.$dirty && srFormSearch.srEmail.$error.required">Obrigatório</span>
                                        <span class="text-danger" ng-show="srFormSearch.srEmail.$dirty && srFormSearch.srEmail.$error.email">Email inválido</span>
                                    </div>
                                </div>
                                <button type="submit" class="awe-btn awe-btn-13" ng-disabled="srFormSearch.$invalid" id="btn-salvar-pesquisa">Continuar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <form novalidate name="srForm" ng-submit="updateReservation()" class="hide" id="srForm">
        <div class="container">
            <div class="reservation-page">
                <div class="row">
                    <div class="col-md-4 col-lg-3">
                        <div class="reservation-sidebar">
                            <div class="reservation-date bg-gray">
                                <h2 class="reservation-heading">Datas</h2>
                                <ul>
                                    <li>
                                        <span>Check-in</span>
                                        <span>@Model.CheckIn</span>
                                        <input type="hidden" id="srReservaId">
                                        <input type="hidden" id="srCheckin" value="@Model.CheckIn">
                                        <input type="hidden" id="srEntrada" value="">
                                    </li>
                                    <li>
                                        <span>Check-out</span>
                                        <span>@Model.CheckOut</span>
                                        <input type="hidden" id="srCheckout" value="@Model.CheckOut">
                                        <input type="hidden" id="srSaida" value="">
                                    </li>
                                    <li>
                                        <span>Total de noites</span>
                                        <span>@Model.TotalDias</span>
                                    </li>
                                    <li>
                                        <span>Total de pessoas</span>
                                        <span>@Model.TotalPessoas</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="reservation-room-selected bg-gray">
                                <h2 class="reservation-heading">Acomodação</h2>
                                <div class="reservation-room-seleted_item">
                                    <div class="reservation-room-seleted_name has-package">
                                        <h2>@Model.RoomName</h2>
                                        <input type="hidden" id="srApartamentoId" value="@Model.RoomId">
                                    </div>
                                    <span class="reservation-option">@Model.Adultos Adulto(s), @Model.Criancas Crianca(s)</span>
                                    <input type="hidden" id="srAdultos" value="@Model.Adultos">
                                    <input type="hidden" id="srCriancas" value="@Model.Criancas">
                                </div>
                                <div class="reservation-room-seleted_total">
                                    <label>TOTAL</label>
                                    <span class="reservation-total">R$ @Model.ValorDiariaTotal</span>
                                    <input type="hidden" id="srValorTotal" value="@Model.ValorDiariaTotal">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-lg-9">
                        <div class="reservation_content">
                            <div class="reservation-billing-detail">
                                <h4>DETALHES DO PAGAMENTO</h4>
                                <p>Após preenchido os dados, clique em Reservar para efetuar sua pré-reserva. Em seguida você receberá um e-mail e um atendente entrará em contato para confirmação.</p>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <label>Nome<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srNome" ng-model="srForm.nome" required id="srNome">
                                        <span class="text-danger" ng-show="srForm.srNome.$dirty && srForm.srNome.$error.required">Obrigatório</span>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>Sobrenome<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srSobrenome" ng-model="srForm.sobrenome" required>
                                        <span class="text-danger" ng-show="srForm.srSobrenome.$dirty && srForm.srSobrenome.$error.required">Obrigatório</span>
                                    </div>
                                    <div class="col-sm-4">
                                        <label>CPF<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srCpf" ng-model="srForm.cpf" required data-mask="000.000.000-00" data-mask-clearifnotmatch="true">
                                        <span class="text-danger" ng-show="srForm.srCpf.$dirty && srForm.srCpf.$error.required">Obrigatório</span>
                                    </div>
                                </div>
                                <label>Endereço<sup>*</sup></label>
                                <input type="text" class="input-text" name="srEndereco" ng-model="srForm.endereco" required>
                                <span class="text-danger" ng-show="srForm.srEndereco.$dirty && srForm.srEndereco.$error.required">Obrigatório</span>
                                <br><br>
                                <input type="text" class="input-text" placeholder="Complemento" name="srComplemento" ng-model="srForm.complemento">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Cidade<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srCidade" ng-model="srForm.cidade" required>
                                        <span class="text-danger" ng-show="srForm.srCidade.$dirty && srForm.srCidade.$error.required">Obrigatório</span>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Estado<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srEstado" ng-model="srForm.estado" required>
                                        <span class="text-danger" ng-show="srForm.srEstado.$dirty && srForm.srEstado.$error.required">Obrigatório</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <label>Email<sup>*</sup></label>
                                        <input type="email" class="input-text" name="srEmail" ng-model="srForm.email" required id="srEmail">
                                        <span class="text-danger" ng-show="srForm.srEmail.$dirty && srForm.srEmail.$error.required">Obrigatório</span>
                                        <span class="text-danger" ng-show="srForm.srEmail.$dirty && srForm.srEmail.$error.email">Email inválido</span>
                                    </div>
                                    <div class="col-sm-6">
                                        <label>Telefone<sup>*</sup></label>
                                        <input type="text" class="input-text" name="srTelefone" ng-model="srForm.telefone" required data-mask="(00) 0000-00009" data-mask-clearifnotmatch="true">
                                        <span class="text-danger" ng-show="srForm.srTelefone.$dirty && srForm.srTelefone.$error.required">Obrigatório</span>
                                    </div>
                                </div>
                                <label>Observações para a reserva</label>
                                <textarea type="text" class="input-textarea" placeholder="Exemplo: exigências para a reserva" ng-model="srForm.observacoes"></textarea>
                                <ul class="option-bank">
                                    <li>
                                        <label class="label-radio">
                                            <input type="radio" class="input-radio" name="chose-bank" value="0" ng-model="srForm.tipoPagamento" ng-required="!srForm.tipoPagamento">
                                            Transferência bancária
                                        </label>
                                        <div id="srCbTransferencia" ng-show="srForm.tipoPagamento == 0">
                                            <p>Enviaremos todos os dados necessários para depósito por e-mail.</p>
                                            <p>Faça o depósito direto em nossa conta bancária.</p>
                                            <p>Por favor, guarde o comprovante de depósito.</p>
                                            <p>Sua ordem não será válida até que o depósito seja creditado em nossa conta.</p>
                                        </div>
                                    </li>
                                    <li>
                                        <label class="label-radio">
                                            <input type="radio" class="input-radio" name="chose-bank" value="1" ng-model="srForm.tipoPagamento" ng-required="!srForm.tipoPagamento">
                                            Cheque
                                        </label>
                                    </li>
                                    <li>
                                        <label class="label-radio">
                                            <input type="radio" class="input-radio" name="chose-bank" value="2" ng-model="srForm.tipoPagamento" ng-required="!srForm.tipoPagamento">
                                            Cartão de crédito
                                        </label>
                                        <img src="~/Content/global/img/icon-card.jpg" />
                                        <div id="srCbCc" ng-show="srForm.tipoPagamento == 2">
                                            <label>Número<sup>*</sup></label>
                                            <input type="text" class="input-text" name="srNumeroCc" ng-model="srForm.numeroCartaoCredito" ng-required="srForm.tipoPagamento == 2" data-mask="0000 0000 0000 0000" data-mask-clearifnotmatch="true">
                                            <span class="text-danger" ng-show="srForm.tipoPagamento == 2">Obrigatório</span>
                                        </div>
                                    </li>
                                </ul>
                                <button type="submit" class="awe-btn awe-btn-13" ng-disabled="srForm.$invalid" id="btn-reservar">Reservar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>