                                <option value="8">8</option>
                                <option value="9">9</option>
                            </select>
                            <select class="awe-select" name="scaCriancas" ng-model="scaForm.criancas">
                                <option value="">Crianças</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                            </select>
                            <div id="div-faixa-etaria" ng-show="scaForm.criancas > 0">
                                <select class="awe-select" name="scaFaixa01" ng-model="scaForm.faixa01">
                                    <option value="">Faixa 01</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                </select>
                                <select class="awe-select" name="scaFaixa02" ng-model="scaForm.faixa02">
                                    <option value="">Faixa 02</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                </select>
                                <select class="awe-select" name="scaFaixa03" ng-model="scaForm.faixa03">
                                    <option value="">Faixa 03</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>
                                    <option value="9">9</option>
                                </select>
                            </div>
                            <div class="vailability-submit">
                                <button class="awe-btn awe-btn-13">Pesquisar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>