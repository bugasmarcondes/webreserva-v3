@model WebReserva.ViewModels.PageAvailabilityViewModel
@{
    ViewBag.Title = "Disponibilidade - " + Model.WrHotel.Nome;
    ViewBag.TenantName = Model.WrHotel.Nome;
    ViewBag.TenantId = Model.WrHotel.Id;
    ViewBag.TenantUrl = Model.WrHotel.HostUrl;
    ViewBag.Tema = Model.WrHotel.Tema;
    ViewBag.ImgLogo = Model.WrHotel.ImgLogo;
    ViewBag.Facebook = Model.WrHotel.Facebook;
    ViewBag.Twitter = Model.WrHotel.Twitter;
    ViewBag.Instagram = Model.WrHotel.Instagram;
    ViewBag.Telefone = Model.WrHotel.Telefone;
    ViewBag.EmailAdministrador = Model.WrHotel.EmailAdministrador;
    ViewBag.Erro = false;
}

@section scripts {
    <script src="~/Content/global/angular/wrSectionAvailabilityController.js"></script>
    <script src="~/Content/global/js/datepicker-pt-BR.js"></script>
}

<section class="section-sub-banner awe-parallax hotel-1">
    <div class="awe-overlay"></div>
    <div class="sub-banner">
        <div class="container">
            <div class="text text-center">
                <h2>Checar Disponibilidade</h2>
            </div>
        </div>
    </div>
</section>

<div class="no-negative-margin">
    @Html.Partial("SectionAvailability", Model.SectionAvailability)
</div>

@Html.Partial("SectionRoom", Model.SectionRoomList)